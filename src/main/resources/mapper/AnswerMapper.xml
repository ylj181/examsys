    <select id="selectAnswerByExamIdAndUserId" parameterType="map" resultMap="BaseResultMap">
    select * FROM
    answer a
    INNER JOIN eTest et
    on a.eTid = et.id
    INNER JOIN exam e
    on et.eid = e.id
    INNER JOIN user u
    ON a.uid = u.id
    where e.id = #{eid} and u.id = #{uid}
