    <select id="findAllRadios" parameterType="int" resultMap="radioAllMap">
        select r.*, s.name
        from radio r
        inner join subject s on r.subjectId = s.id and r.recentType =1
        <where>
            <if test="name!=null">
               name like "%${name}%"
            </if>
            <!--            <if test="typename==null">-->
            <!--                and typename like "%1%"-->
            <!--            </if>-->
        </where>
    </select>

