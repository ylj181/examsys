<!--    批量修改（录入）-->
    <update id="updateRecentTypeByIds" parameterType="list">
        <!-- foreach 遍历
            collenction 遍历的元素
            Item 遍历的元素的临时变量名
            open、close 遍历出来的数据，使用哪些指定非符号包裹
            sepator 遍历的元素之间使用的分隔符
         -->
        update radio set recentType = 1 where id in
        <foreach collection="list" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </update>

